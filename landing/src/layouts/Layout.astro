---
import { ViewTransitions } from 'astro:transitions'

interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <title>{title}</title>
    <meta charset="UTF-8" />
    <meta name="author" content="Ot Roca Tanya" />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro Basics</title>
  </head>
  <body>
    <slot />
  </body>

  <style is:global>
    @import url('https://fonts.googleapis.com/css2?family=Anonymous+Pro:ital,wght@0,700;1,700&display=swap');
    @import url('https://fonts.googleapis.com/css2?family=Gudea:ital,wght@0,400;0,700;1,400&display=swap');
    @import 'tailwindcss';

    :root {
      --richblack: #000e22;
      --navy: #001533;
      --seablue: #2e4a66;
      --slate-gray: #b4b9c0;
      --anti-flash-white: #efefef;
      --screaming-green: #4cd625;
    }

    html,
    body {
      font-family: 'Gudea', Inter, Roboto, 'Helvetica Neue', 'Arial Nova',
        'Nimbus Sans', Arial, sans-serif;

      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      width: 100vw;
      margin: 0;
      background: var(--navy);
    }

    h2,
    h3 {
      color: var(--screaming-green);
      font-family: 'Anonymous Pro', serif;
      font-weight: 700;
      font-style: normal;
    }

    .btn {
      font-family: 'Anonymous Pro', serif;
      width: fit-content;
      font-weight: 700;
      text-decoration: none;
      padding: 0.6rem 1rem;
      border-radius: 0.4rem;
      transition: transform 0.5s ease;
      display: flex;
      align-items: center;
      justify-items: center;
    }

    .primary-btn {
      color: var(--richblack);
      background: var(--screaming-green);
      border: 2px var(--screaming-green) solid;
    }

    .primary-btn:hover,
    .primary-btn:active {
      color: var(--screaming-green);
      background: var(--navy);
      transform: translateY(-3px);
      box-shadow: 0px 5px 5px 0px rgba(0, 0, 0, 0.75);
    }

    .secondary-btn {
      border: 2px var(--screaming-green) solid;
      color: var(--screaming-green);
      background: var(--richblack);
    }

    .secondary-btn:hover,
    .secondary-btn:active {
      color: var(--richblack);
      background: var(--screaming-green);
      transform: translateY(-3px);
      box-shadow: 0px 5px 5px 0px rgba(0, 0, 0, 0.75);
    }

    .project-card {
      position: relative;
      overflow: hidden;
      background: var(--seablue);
      border-radius: 1rem;
      transition: all 300ms ease-in-out;
    }

    .project-card:hover,
    .project-card:active {
      transform: rotate(1deg) translateY(-12px) scale(1.05);
      box-shadow: 0px 5px 10px 0px var(--seablue);
    }

    .tech-icon {
      font-family: 'Anonymous Pro', serif;
      font-weight: 700;
      font-size: 1rem;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.4rem;
      padding: 0.4rem 1rem;
      color: var(--anti-flash-white);
      background: var(--richblack);
      border-radius: 2.5rem;
    }
  </style>
</html>
